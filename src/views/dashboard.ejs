<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Code Snippet Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="container mt-4">
      <div class="bg-light p-3 rounded">
        <h2 class="text-primary">Code Snippet</h2>
        <div class="row">
          <div class="col-md-4">
            <label class="form-label">Filter by language:</label>
            <select id="languageFilter" class="form-select">
              <option value="All">All</option>
              <% snippets.forEach(snippet => { %>
              <option value="<%= snippet.language %>">
                <%= snippet.language %>
              </option>
              <% }); %>
            </select>
          </div>
          <div class="col-md-4">
            <label class="form-label">Filter by tags:</label>
            <select id="tagFilter" class="form-select">
              <option value="All">All</option>
              <% snippets.forEach(snippet => { %> <% snippet.tags.forEach(tag =>
              { %>
              <option value="<%= tag %>"><%= tag %></option>
              <% }); %> <% }); %>
            </select>
          </div>
        </div>
      </div>

      <table class="table table-striped mt-4">
        <thead class="table-primary">
          <tr>
            <th>Title</th>
            <th>Code Snippet</th>
            <th>Language</th>
            <th>Tags</th>
          </tr>
        </thead>
        <tbody>
          <% snippets.forEach(snippet => { %>
          <tr
            class="snippet-row"
            data-language="<%= snippet.language %>"
            data-tags="<%= snippet.tags.join(',') %>"
          >
            <td><%= snippet.title %></td>
            <td>
              <pre class="code-block"><code><%= snippet.code %></code></pre>
            </td>
            <td><%= snippet.language %></td>
            <td><%= snippet.tags.join(", ") %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <script src="/js/script.js"></script>
  </body>
</html>
