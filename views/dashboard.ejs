<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Snippets Dashboard</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="container">
      <h1>Code Snippets</h1>

      <form method="GET" action="/">
        <input type="text" name="language" placeholder="Filter by language" />
        <input
          type="text"
          name="tags"
          placeholder="Filter by tags (comma-separated)"
        />
        <button type="submit">Filter</button>
      </form>

      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Code</th>
            <th>Language</th>
            <th>Tags</th>
          </tr>
        </thead>
        <tbody>
          <% snippets.forEach(snippet => { %>
          <tr>
            <td><%= snippet.title %></td>
            <td>
              <pre><code><%= snippet.code %></code></pre>
            </td>
            <td><%= snippet.language %></td>
            <td><%= snippet.tags.join(", ") %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
